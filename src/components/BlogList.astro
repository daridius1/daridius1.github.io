---
import { getCollection, type CollectionEntry } from "astro:content";

const posts: CollectionEntry<"blog">[] = (await getCollection("blog")).sort(
    (a: CollectionEntry<"blog">, b: CollectionEntry<"blog">) =>
        b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

const rawTags = [...new Set(posts.flatMap((post) => post.data.tags || []))];
const MAIN_TAGS = ["Sobre mí", "Ideas", "Proyectos", "Reviews"];

const mainTags = MAIN_TAGS.filter((tag) => rawTags.includes(tag));
const otherTags = rawTags.filter((tag) => !MAIN_TAGS.includes(tag)).sort();

import { formatDate } from "../utils/date";

const formatDateShort = (date: Date) =>
    formatDate(date, { month: "short", day: "2-digit", year: "numeric" });
---

<div class="blog-container-layout">
    <aside class="filter-sidebar">
        <div class="filter-header">
            <span class="filter-title">Filtros</span>
        </div>

        <div
            id="selected-wrapper"
            class="selected-wrapper"
            style="display: none;"
        >
            <span class="filter-subtitle">Seleccionados</span>
            <div id="selected-container" class="selected-container"></div>
        </div>

        <div class="filter-groups">
            <details class="filter-group">
                <summary>
                    <span>Categorías</span>
                    <svg
                        width="12"
                        height="12"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2.5"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        ><path d="m6 9 6 6 6-6"></path></svg
                    >
                </summary>
                <div class="filter-list" id="categories-container">
                    {
                        mainTags.map((tag) => (
                            <button class="filter-item" data-tag={tag}>
                                <div class="checkbox" />
                                <span class="tag-name">{tag}</span>
                            </button>
                        ))
                    }
                </div>
            </details>

            <details class="filter-group">
                <summary>
                    <span>Temas</span>
                    <svg
                        width="12"
                        height="12"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2.5"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        ><path d="m6 9 6 6 6-6"></path></svg
                    >
                </summary>
                <div class="filter-list" id="tags-container">
                    {
                        otherTags.map((tag) => (
                            <button class="filter-item" data-tag={tag}>
                                <div class="checkbox" />
                                <span class="tag-name">{tag}</span>
                            </button>
                        ))
                    }
                </div>
            </details>
        </div>
    </aside>

    <div class="blog-list" id="blog-list">
        {
            posts.map((post) => (
                <a
                    href={`/blog/${post.slug}`}
                    class="post-item"
                    data-tags={JSON.stringify(post.data.tags || [])}
                >
                    <div class="post-meta">
                        <time datetime={post.data.pubDate.toISOString()}>
                            {formatDateShort(post.data.pubDate)}
                        </time>
                    </div>
                    <div class="post-info">
                        <h2 class="post-title">{post.data.title}</h2>
                        {post.data.tags && post.data.tags.length > 0 && (
                            <div class="post-tags-row">
                                {post.data.tags.map((tag: string) => (
                                    <span
                                        class={`tag-label ${MAIN_TAGS.includes(tag) ? "is-main" : ""}`}
                                    >
                                        {tag}
                                    </span>
                                ))}
                            </div>
                        )}
                    </div>
                </a>
            ))
        }
        <div id="no-results" class="no-results" style="display: none;">
            No hay entradas con estos filtros.
        </div>
    </div>
</div>

<script>
    const filterContainers = [
        document.getElementById("categories-container"),
        document.getElementById("tags-container"),
    ];
    const applyBtn = document.getElementById("apply-filter");
    const postItems = document.querySelectorAll(".post-item");
    const noResults = document.getElementById("no-results");

    const selectedWrapper = document.getElementById("selected-wrapper");
    const selectedContainer = document.getElementById("selected-container");

    let selectedTags = new Set<string>();

    // Initial load from URL
    const urlParams = new URLSearchParams(window.location.search);
    const tagsFromUrl = urlParams.get("tags");
    if (tagsFromUrl) {
        tagsFromUrl.split(",").forEach((tag) => {
            if (tag) selectedTags.add(tag);
        });
        refreshFilterUI();
        filterPosts();
    }

    // Event Delegation for Filter Lists
    filterContainers.forEach((container) => {
        container?.addEventListener("click", (e) => {
            const target = (e.target as HTMLElement).closest(".filter-item");
            if (!target) return;

            const tag = target.getAttribute("data-tag");
            if (tag) {
                if (selectedTags.has(tag)) {
                    selectedTags.delete(tag);
                } else {
                    selectedTags.add(tag);
                }
                applyFilters();
                refreshFilterUI();
            }
        });
    });

    // Event Delegation for Selected List
    selectedContainer?.addEventListener("click", (e) => {
        const target = (e.target as HTMLElement).closest(".filter-item");
        if (!target) return;

        const tag = target.getAttribute("data-tag");
        if (tag) {
            selectedTags.delete(tag);
            applyFilters();
            refreshFilterUI();
        }
    });

    function applyFilters() {
        const newUrl = new URL(window.location.href);
        if (selectedTags.size > 0) {
            newUrl.searchParams.set("tags", Array.from(selectedTags).join(","));
        } else {
            newUrl.searchParams.delete("tags");
        }
        window.history.pushState({}, "", newUrl);
        filterPosts();
    }

    function refreshFilterUI() {
        // Toggle wrapper visibility
        if (selectedWrapper) {
            selectedWrapper.style.display =
                selectedTags.size > 0 ? "block" : "none";
        }

        // Clear container
        if (selectedContainer) selectedContainer.innerHTML = "";

        // Reset all original buttons first
        document
            .querySelectorAll(".filter-list .filter-item")
            .forEach((btn) => {
                const tag = btn.getAttribute("data-tag");
                if (tag && selectedTags.has(tag)) {
                    (btn as HTMLElement).classList.add("active");

                    // Create clone for selected list
                    const clone = btn.cloneNode(true) as HTMLElement;
                    clone.classList.add("selected-item");
                    clone.classList.remove("active"); // Optional: remove active style from clone if we want it to look different

                    selectedContainer?.appendChild(clone);
                } else {
                    (btn as HTMLElement).classList.remove("active");
                }
            });
    }

    function filterPosts() {
        let visibleCount = 0;
        postItems.forEach((item) => {
            const postTags = JSON.parse(item.getAttribute("data-tags") || "[]");
            const matches =
                selectedTags.size === 0 ||
                Array.from(selectedTags).every((tag) => postTags.includes(tag));

            if (matches) {
                (item as HTMLElement).style.display = "grid";
                visibleCount++;
            } else {
                (item as HTMLElement).style.display = "none";
            }
        });

        if (noResults) {
            noResults.style.display = visibleCount === 0 ? "block" : "none";
        }
    }
</script>

<style>
    .blog-container-layout {
        display: grid;
        grid-template-columns: 320px 1fr;
        gap: 6rem;
        align-items: start;
    }

    .filter-sidebar {
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 20px;
        padding: 2rem;
        animation: fade-in 1s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .filter-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    }

    .filter-title {
        font-size: 0.85rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.15em;
        opacity: 0.5;
    }

    .selected-wrapper {
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        animation: fade-in 0.3s ease;
    }

    .filter-subtitle {
        display: block;
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        opacity: 0.6;
        margin-bottom: 1rem;
        color: var(--accent-color);
    }

    .selected-container {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    /* Selected items style overrides */
    .selected-container .filter-item {
        background: rgba(255, 255, 255, 0.1);
        color: #fff;
    }

    .selected-container .filter-item:hover {
        background: rgba(
            255,
            255,
            255,
            0.15
        ); /* Reddish hover to indicate removal? Or just brighter */
    }

    .selected-container .checkbox {
        background: #fff;
        border-color: #fff;
    }

    .selected-container .checkbox::after {
        /* Turn checkmark into minus or X maybe? For now keeping check is fine as per request "list of selected" */
        content: "";
        position: absolute;
        width: 4px;
        height: 7px;
        border: solid #000;
        border-width: 0 1.5px 1.5px 0;
        transform: rotate(45deg);
        left: 4px;
        top: 1.5px;
    }

    .apply-btn {
        background: #fff;
        color: #000;
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        font-size: 0.8rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .apply-btn:hover {
        opacity: 0.9;
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(255, 255, 255, 0.1);
    }

    .filter-groups {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .filter-group summary {
        list-style: none;
        padding: 0.8rem 0.5rem;
        cursor: pointer;
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 0.9rem;
        font-weight: 500;
        color: rgba(255, 255, 255, 0.8);
        border-radius: 8px;
        transition: all 0.2s ease;
    }

    .filter-group summary:hover {
        background: rgba(255, 255, 255, 0.04);
        color: #fff;
    }

    .filter-group[open] summary svg {
        transform: rotate(180deg);
    }

    .filter-list {
        display: flex;
        flex-direction: column;
        gap: 0.35rem;
        padding: 0.75rem 0;
    }

    .filter-item {
        background: transparent;
        border: none;
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 0.6rem 0.75rem;
        border-radius: 8px;
        cursor: pointer;
        text-align: left;
        color: rgba(255, 255, 255, 0.4);
        transition: all 0.2s ease;
        width: 100%;
    }

    .filter-item:hover {
        background: rgba(255, 255, 255, 0.04);
        color: rgba(255, 255, 255, 0.9);
    }

    .filter-item.active {
        color: #fff;
        background: rgba(255, 255, 255, 0.06);
    }

    .checkbox {
        width: 14px;
        height: 14px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 4px;
        position: relative;
        flex-shrink: 0;
        transition: all 0.2s ease;
    }

    .filter-item.active .checkbox {
        background: #fff;
        border-color: #fff;
    }

    .filter-item.active .checkbox::after {
        content: "";
        position: absolute;
        width: 4px;
        height: 7px;
        border: solid #000;
        border-width: 0 1.5px 1.5px 0;
        transform: rotate(45deg);
        left: 4px;
        top: 1.5px;
    }

    .tag-name {
        font-size: 0.9rem;
        font-weight: 400;
    }

    .blog-list {
        display: flex;
        flex-direction: column;
    }

    .post-item {
        display: grid;
        grid-template-columns: 180px 1fr;
        gap: 3rem;
        padding: 2.5rem 1rem;
        margin-left: -1rem;
        margin-right: -1rem;
        text-decoration: none;
        color: inherit;
        border-bottom: 1px solid rgba(255, 255, 255, 0.03);
        transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
        border-radius: 12px;
    }

    .post-item:hover {
        border-bottom-color: rgba(255, 255, 255, 0.1);
        background: rgba(255, 255, 255, 0.02);
    }

    .post-item:hover .post-title {
        color: #fff;
    }

    .post-meta {
        font-size: 0.9rem;
        opacity: 0.3;
        padding-top: 0.75rem;
        font-weight: 500;
        letter-spacing: 0.02em;
    }

    .post-info {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .post-title {
        font-size: 1.85rem;
        font-weight: 600;
        color: rgba(255, 255, 255, 0.95);
        transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
        line-height: 1.25;
        letter-spacing: -0.01em;
    }

    .post-tags-row {
        display: flex;
        flex-wrap: wrap;
        gap: 0.75rem;
        align-items: center;
    }

    .tag-label {
        font-size: 0.75rem;
        font-weight: 600;
        color: rgba(255, 255, 255, 0.2);
        text-transform: uppercase;
        letter-spacing: 0.12em;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .tag-label:not(:last-child)::after {
        content: "•";
        font-size: 0.8rem;
        font-weight: 900;
        opacity: 0.4;
        color: #fff;
    }

    .post-item:hover .tag-label {
        color: rgba(255, 255, 255, 0.45);
    }

    .no-results {
        padding: 8rem 0;
        text-align: center;
        opacity: 0.4;
        font-size: 1.2rem;
        font-weight: 300;
    }

    @keyframes fade-in {
        from {
            opacity: 0;
            transform: translateY(10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @media (max-width: 1200px) {
        .blog-container-layout {
            gap: 3rem;
        }
    }

    @media (max-width: 1024px) {
        .blog-container-layout {
            grid-template-columns: 1fr;
            gap: 4rem;
        }

        .filter-sidebar {
            position: relative;
            top: 0;
            max-width: 100%;
        }
    }

    @media (max-width: 768px) {
        .post-item {
            grid-template-columns: 1fr;
            gap: 1.5rem;
            padding: 2.5rem 1rem;
        }

        .post-meta {
            padding-top: 0;
        }

        .post-item:hover {
            background: rgba(255, 255, 255, 0.02);
        }
    }
</style>
