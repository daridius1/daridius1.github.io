---
interface Props {
    title: string;
    description: string;
    color: "blue" | "green" | "red" | "black";
}

const { title, description, color } = Astro.props;

// Internal mapping of simplified colors to Tailwind classes
const colorMap = {
    blue: {
        text: "text-blue-500",
        border: "border-blue-500",
        button: "bg-blue-600 hover:bg-blue-700",
    },
    green: {
        text: "text-green-500",
        border: "border-green-500",
        button: "bg-green-600 hover:bg-green-700",
    },
    red: {
        text: "text-red-500",
        border: "border-red-500",
        button: "bg-red-600 hover:bg-red-700",
    },
    black: {
        text: "text-black",
        border: "border-black",
        button: "bg-black hover:bg-zinc-950 border border-white/5",
    },
};

const style = colorMap[color];
---

<div
    class={`card bg-white/5 shadow-2xl backdrop-blur-xl border-t-4 transition-all hover:scale-[1.02] ${style.border}`}
>
    <div class="card-body p-8">
        <h2
            class={`card-title text-2xl font-black tracking-tighter ${style.text}`}
        >
            {title}
        </h2>
        <p class="text-white/60 font-medium tracking-wide">{description}</p>
        <div class="card-actions justify-end mt-4">
            <button
                class={`btn btn-sm border-none text-white font-bold ${style.button}`}
                >Ver m√°s</button
            >
        </div>
    </div>
</div>
