---
interface Props {
    title: string;
    description: string;
    href: string;
}

const { title, description, href } = Astro.props;
---

<a
    href={href}
    class="card bg-white/5 shadow-2xl backdrop-blur-xl border border-white/10 transition-all hover:scale-[1.02] hover:bg-white/10 group"
>
    <div class="card-body p-8">
        <h2 class="card-title text-2xl font-black tracking-tighter text-white">
            {title}
        </h2>
        <p class="text-white/60 font-medium tracking-wide">{description}</p>
        <div class="card-actions justify-end mt-4">
            <div
                class="btn btn-sm border-none bg-white/10 group-hover:bg-white/20 text-white font-bold"
            >
                Ver m√°s
            </div>
        </div>
    </div>
</a>
