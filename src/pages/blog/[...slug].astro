---
import { getCollection, type CollectionEntry } from "astro:content";
import Layout from "../../layouts/Layout.astro";

export async function getStaticPaths() {
    const blogEntries = (await getCollection("blog")).sort(
        (a: CollectionEntry<"blog">, b: CollectionEntry<"blog">) =>
            b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
    );

    return blogEntries.map((entry: CollectionEntry<"blog">, index: number) => ({
        params: { slug: entry.slug },
        props: {
            entry,
            prev:
                index < blogEntries.length - 1 ? blogEntries[index + 1] : null,
            next: index > 0 ? blogEntries[index - 1] : null,
        },
    }));
}

interface Props {
    entry: CollectionEntry<"blog">;
    prev: CollectionEntry<"blog"> | null;
    next: CollectionEntry<"blog"> | null;
}

import { formatDate } from "../../utils/date";

const { entry, prev, next } = Astro.props;
const { Content } = await entry.render();
---

<Layout title={`${entry.data.title} | daridius`}>
    <article class="post">
        <header class="post-header">
            <div class="meta">
                <time datetime={entry.data.pubDate.toISOString()}>
                    {formatDate(entry.data.pubDate)}
                </time>
                {
                    entry.data.tags && entry.data.tags.length > 0 && (
                        <div class="tags">
                            {entry.data.tags.map((tag: string) => (
                                <a href={`/blog?tags=${tag}`} class="tag-link">
                                    {tag}
                                </a>
                            ))}
                        </div>
                    )
                }
            </div>
            <h1>{entry.data.title}</h1>
            <p class="description">{entry.data.description}</p>
        </header>

        <div class="content">
            <Content />
        </div>

        {
            entry.data.music && (
                <section class="post-music">
                    <div class="music-card">
                        <div class="music-icon">
                            <svg
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                            >
                                <path d="M9 18V5l12-2v13" />
                                <circle cx="6" cy="18" r="3" />
                                <circle cx="18" cy="16" r="3" />
                            </svg>
                        </div>
                        <div class="music-info">
                            <span class="music-label">
                                Te vamos a ponerte un tema
                            </span>
                            <div class="music-main">
                                <h3 class="music-title">
                                    {entry.data.music.title}
                                </h3>
                                <span class="music-separator">•</span>
                                <p class="music-author">
                                    {entry.data.music.author}
                                </p>
                            </div>
                            {entry.data.music.verse && (
                                <blockquote class="music-verse">
                                    "{entry.data.music.verse}"
                                </blockquote>
                            )}
                        </div>
                    </div>
                </section>
            )
        }

        <nav class="post-nav">
            <div class="nav-wrapper">
                {
                    prev ? (
                        <a href={`/blog/${prev.slug}`} class="nav-card prev">
                            <span class="nav-label">Anterior</span>
                            <span class="nav-title">{prev.data.title}</span>
                        </a>
                    ) : (
                        <div class="nav-empty" />
                    )
                }

                <a href="/blog" class="back-link" title="Volver a la bitácora">
                    <svg
                        width="20"
                        height="20"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                    >
                        <rect x="3" y="3" width="7" height="7"></rect>
                        <rect x="14" y="3" width="7" height="7"></rect>
                        <rect x="14" y="14" width="7" height="7"></rect>
                        <rect x="3" y="14" width="7" height="7"></rect>
                    </svg>
                </a>

                {
                    next ? (
                        <a href={`/blog/${next.slug}`} class="nav-card next">
                            <span class="nav-label">Siguiente</span>
                            <span class="nav-title">{next.data.title}</span>
                        </a>
                    ) : (
                        <div class="nav-empty" />
                    )
                }
            </div>
        </nav>
    </article>
</Layout>

<style is:global>
    .post {
        max-width: 700px;
        margin: 0 auto;
        padding: 4rem 0;
    }

    .post-header {
        margin-bottom: 4rem;
    }

    .meta {
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 0.9rem;
        opacity: 0.5;
        margin-bottom: 1.5rem;
    }

    .tags {
        display: flex;
        gap: 0.75rem;
        align-items: center;
    }

    .tag-link {
        color: inherit;
        text-decoration: none;
        text-transform: uppercase;
        font-size: 0.75rem;
        font-weight: 600;
        letter-spacing: 0.12em;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .tag-link:not(:last-child)::after {
        content: "•";
        font-size: 0.8rem;
        font-weight: 900;
        opacity: 0.3;
        color: #fff;
    }

    .tag-link:hover {
        color: #fff;
        opacity: 1;
        transform: translateY(-1px);
    }

    .post-header h1 {
        font-size: 3.5rem;
        font-weight: 700;
        line-height: 1.1;
        margin-bottom: 1.5rem;
        color: #fff;
    }

    .description {
        font-size: 1.4rem;
        line-height: 1.5;
        opacity: 0.7;
        font-style: italic;
    }

    .content {
        line-height: 1.8;
        font-size: 1.15rem;
        color: rgba(255, 255, 255, 0.9);
    }

    .content h2 {
        font-size: 2rem;
        margin-top: 3rem;
        margin-bottom: 1.5rem;
        color: #fff;
    }

    .content a {
        color: #fff;
        text-decoration: none;
        position: relative;
        transition: color 0.3s ease;
        font-weight: 500;
        background: linear-gradient(
                to right,
                rgba(255, 255, 255, 0.4),
                rgba(255, 255, 255, 0.4)
            )
            no-repeat;
        background-size: 100% 1px;
        background-position: 0 100%;
    }

    .content a:hover {
        color: #fff;
        background-size: 100% 2px;
        background-image: linear-gradient(to right, #fff, #fff);
    }

    .content p {
        margin-bottom: 1.5rem;
    }

    .content ul,
    .content ol {
        margin-bottom: 1.5rem;
        padding-left: 1.5rem;
    }

    .content li {
        margin-bottom: 0.5rem;
    }

    .content blockquote {
        border-left: 3px solid #fff;
        margin: 2.5rem 0;
        padding: 1.5rem 2rem;
        background: rgba(255, 255, 255, 0.03);
        border-radius: 0 12px 12px 0;
        font-style: italic;
        color: rgba(255, 255, 255, 0.8);
    }

    .content blockquote p {
        margin-bottom: 0;
        line-height: 1.6;
    }

    .content pre {
        background: rgba(255, 255, 255, 0.05);
        padding: 1.5rem;
        border-radius: 12px;
        overflow-x: auto;
        margin: 2rem 0;
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .content code {
        font-family: "JetBrains Mono", monospace;
        font-size: 0.9em;
    }

    .post-music {
        margin-top: 6rem;
    }

    .music-card {
        padding: 2.5rem;
        background: rgba(40, 40, 40, 0.4);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 24px;
        display: flex;
        gap: 2rem;
        align-items: flex-start;
        position: relative;
        overflow: hidden;
    }

    .music-card::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: radial-gradient(
            circle at top left,
            rgba(255, 255, 255, 0.03),
            transparent
        );
        pointer-events: none;
    }

    .music-icon {
        width: 48px;
        height: 48px;
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: rgba(255, 255, 255, 0.4);
        flex-shrink: 0;
    }

    .music-info {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .music-label {
        font-size: 0.7rem;
        text-transform: uppercase;
        letter-spacing: 0.15em;
        font-weight: 700;
        color: rgba(255, 255, 255, 0.45);
    }

    .music-main {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        flex-wrap: wrap;
    }

    .music-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: #fff;
    }

    .music-separator {
        opacity: 0.2;
        font-size: 0.8rem;
    }

    .music-author {
        font-size: 1.1rem;
        color: rgba(255, 255, 255, 0.7);
        font-weight: 500;
    }

    .music-verse {
        margin: 1.5rem 0 0 0;
        padding-left: 1.5rem;
        border-left: 2px solid rgba(255, 255, 255, 0.1);
        font-style: italic;
        font-size: 1rem;
        color: rgba(255, 255, 255, 0.4);
        line-height: 1.6;
    }

    .post-nav {
        margin-top: 8rem;
        padding-top: 4rem;
        border-top: 1px solid rgba(255, 255, 255, 0.05);
    }

    .nav-wrapper {
        display: grid;
        grid-template-columns: 1fr auto 1fr;
        align-items: stretch;
        gap: 2rem;
    }

    .nav-card {
        text-decoration: none;
        padding: 1.5rem;
        border-radius: 16px;
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid rgba(255, 255, 255, 0.03);
        transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .nav-card:hover {
        background: rgba(255, 255, 255, 0.04);
        border-color: rgba(255, 255, 255, 0.1);
        transform: translateY(-4px);
    }

    .nav-card.next {
        text-align: right;
    }

    .nav-label {
        font-size: 0.7rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        font-weight: 700;
        color: rgba(255, 255, 255, 0.3);
    }

    .nav-title {
        font-size: 1rem;
        font-weight: 600;
        color: rgba(255, 255, 255, 0.8);
        line-height: 1.4;
    }

    .nav-card:hover .nav-title {
        color: #fff;
    }

    .back-link {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 48px;
        height: 48px;
        border-radius: 12px;
        color: rgba(255, 255, 255, 0.3);
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid rgba(255, 255, 255, 0.03);
        transition: all 0.3s ease;
        align-self: center;
    }

    .back-link:hover {
        color: #fff;
        background: rgba(255, 255, 255, 0.06);
        border-color: rgba(255, 255, 255, 0.1);
        transform: scale(1.05);
    }

    .nav-empty {
        width: 100%;
    }

    @media (max-width: 768px) {
        .post-header h1 {
            font-size: 2.5rem;
        }

        .nav-wrapper {
            grid-template-columns: 1fr;
            gap: 1rem;
        }

        .back-link {
            grid-row: 1;
            width: 100%;
            height: 40px;
        }

        .nav-card.prev {
            grid-row: 2;
        }
        .nav-card.next {
            grid-row: 3;
        }
        .nav-empty {
            display: none;
        }
    }
</style>
