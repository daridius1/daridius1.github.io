---
import Layout from "../../layouts/Layout.astro";
import AppCard from "../../components/AppCard";

const apps = [
    {
        title: "Matter.js Game",
        description:
            "Un experimento interactivo utilizando el motor de físicas Matter.js.",
        href: "/aplicaciones/matter-game",
    },
];
---

<Layout title="Aplicaciones | Daridius">
    <div class="space-y-12">
        <header class="space-y-4">
            <h1
                class="text-5xl font-black text-white tracking-tighter sm:text-7xl"
            >
                Aplicaciones
            </h1>
            <p
                class="text-lg text-white/50 max-w-2xl font-medium leading-relaxed"
            >
                Colección de experimentos, juegos y herramientas interactivas
                desarrolladas con diversas tecnologías web.
            </p>
        </header>

        <section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {
                apps.map((app) => (
                    <AppCard
                        title={app.title}
                        description={app.description}
                        href={app.href}
                        client:load
                    />
                ))
            }
        </section>
    </div>
</Layout>
