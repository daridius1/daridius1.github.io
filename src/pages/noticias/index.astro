---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";

const news = (await getCollection("noticias")).sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

import { formatDate as format } from "../../utils/date";
const formatDate = (date: Date) =>
    format(date, { year: "numeric", month: "short", day: "numeric" });
---

<Layout title="Noticias | daridius">
    <section class="news-list-container">
        <header class="news-list-header">
            <h1>Archivo de Noticias</h1>
            <p>Crónicas de los eventos que sacuden la vida de Daridius.</p>
        </header>

        <div class="news-grid">
            {
                news.map((item) => (
                    <a href={`/noticias/${item.slug}`} class="news-card">
                        <div class="card-meta">
                            <span class="card-location">
                                {item.data.location}
                            </span>
                            <span class="card-date">
                                {formatDate(item.data.pubDate)}
                            </span>
                        </div>
                        <h2 class="card-title">{item.data.title}</h2>
                        <span class="read-more">Leer más ›</span>
                    </a>
                ))
            }
        </div>
    </section>
</Layout>

<style>
    .news-list-container {
        padding: 3rem 0 6rem 0;
    }

    .news-list-header {
        margin-bottom: 5rem;
    }

    h1 {
        font-size: 3.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
        letter-spacing: -0.02em;
        background: linear-gradient(to bottom, #ffffff, #888888);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    p {
        font-size: 1.25rem;
        opacity: 0.5;
        line-height: 1.6;
    }

    .news-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 2.5rem;
    }

    .news-card {
        text-decoration: none;
        color: inherit;
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 16px;
        padding: 2rem;
        transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
        display: flex;
        flex-direction: column;
    }

    .news-card:hover {
        background: rgba(255, 255, 255, 0.05);
        border-color: rgba(255, 255, 255, 0.1);
        transform: translateY(-5px);
    }

    .card-meta {
        display: flex;
        justify-content: space-between;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        opacity: 0.4;
        margin-bottom: 1.5rem;
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: #fff;
        margin-bottom: 2rem;
        line-height: 1.3;
    }

    .read-more {
        margin-top: auto;
        font-size: 0.9rem;
        font-weight: 600;
        color: rgba(255, 255, 255, 0.4);
        transition: color 0.2s ease;
    }

    .news-card:hover .read-more {
        color: #fff;
    }

    @media (max-width: 768px) {
        h1 {
            font-size: 2.5rem;
        }
        .news-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
