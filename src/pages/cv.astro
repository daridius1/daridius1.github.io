---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Curriculum | Daridius">
    <div class="cv-container">
        <!-- Header -->
        <header class="cv-header">
            <h1 class="name">Diego Salas</h1>
            <p class="title">Desarrollador Full Stack</p>

            <div class="cv-links">
                <a
                    href="https://github.com/daridius1"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="link-item"
                >
                    <svg
                        width="20"
                        height="20"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        ><path
                            d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.28 1.15-.28 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
                        ></path><path d="M9 18c-4.51 2-5-2-7-2"></path></svg
                    >
                    GitHub
                </a>
                <a
                    href="https://www.linkedin.com/in/diego-antonio-salas-5b5196362"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="link-item"
                >
                    <svg
                        width="20"
                        height="20"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        ><path
                            d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"
                        ></path><rect width="4" height="12" x="2" y="9"
                        ></rect><circle cx="4" cy="4" r="2"></circle></svg
                    >
                    LinkedIn
                </a>
            </div>
        </header>

        <main class="cv-content">
            <!-- About -->
            <section class="cv-section">
                <h2 class="section-label">Sobre Mí</h2>
                <p class="about-text">
                    Apasionado por la tecnología, la eficiencia y las cosas
                    simples. Programador empedernido, me gusta tanto aprender
                    como enseñar, y sueño con cambiar el mundo algún día. De
                    batería social infinita y bueno para la talla. Inquieto; mi
                    ambición sin límites será mi fin.
                </p>
            </section>

            <!-- Education -->
            <section class="cv-section">
                <h2 class="section-label">Educación</h2>
                <div class="experience-item">
                    <div class="exp-header">
                        <h3 class="exp-title">
                            Ingeniería Civil en Computación
                        </h3>
                        <span class="exp-date">2019 — PRESENTE</span>
                    </div>
                    <p class="exp-org">Universidad de Chile</p>
                </div>
            </section>

            <!-- Experience -->
            <section class="cv-section">
                <h2 class="section-label">Experiencia</h2>
                <div class="experience-list">
                    <div class="experience-item">
                        <div class="exp-header">
                            <h3 class="exp-title">
                                Memorista — Desarrollador Fullstack
                            </h3>
                            <span class="exp-date">2025 — 2026</span>
                        </div>
                        <p class="exp-org">
                            Instituto de Sistemas Complejos de Ingeniería (ISCI)
                        </p>
                    </div>

                    <div class="experience-item">
                        <div class="exp-header">
                            <h3 class="exp-title">Profesor Auxiliar</h3>
                            <span class="exp-date">2021 — 2024</span>
                        </div>
                        <p class="exp-org">Universidad de Chile</p>
                        <ul class="exp-list">
                            <li>
                                Taller de Programación Competitiva (2021 - 2024)
                            </li>
                            <li>Matemáticas Discretas (2023)</li>
                            <li>Teoría de la Computación (2022)</li>
                            <li>
                                Diseño y Análisis de Algoritmos (2023 - 2024)
                            </li>
                        </ul>
                    </div>

                    <div class="experience-item">
                        <div class="exp-header">
                            <h3 class="exp-title">
                                Practicante — Desarrollador Fullstack
                            </h3>
                            <span class="exp-date">2023</span>
                        </div>
                        <p class="exp-org">Pulso Escolar</p>
                    </div>

                    <div class="experience-item">
                        <div class="exp-header">
                            <h3 class="exp-title">
                                Practicante — Desarrollador Fullstack
                            </h3>
                            <span class="exp-date">2022</span>
                        </div>
                        <p class="exp-org">Nursoft</p>
                    </div>
                </div>
            </section>

            <!-- Achievements -->
            <section class="cv-section">
                <h2 class="section-label">Logros</h2>
                <div class="achievements-grid">
                    <div class="achievement-card">
                        <h3 class="ach-title">ICPC</h3>
                        <p class="ach-desc">
                            International Collegiate Programming Contest
                        </p>
                        <ul class="ach-list">
                            <li>Final Latinoamericana, México (2024)</li>
                            <li>1er Lugar Nacional - Chile (2022)</li>
                            <li>2do Lugar Nacional - Chile (2023)</li>
                            <li>3er Lugar Nacional - Chile (2019)</li>
                        </ul>
                    </div>
                    <div class="achievement-card">
                        <h3 class="ach-title">
                            IOI <span class="ach-meta">2019</span>
                        </h3>
                        <p class="ach-desc">
                            International Olympiad in Informatics
                        </p>
                        <p class="ach-note">
                            Representante de Chile en Azerbaiyán
                        </p>
                    </div>
                    <div class="achievement-card">
                        <h3 class="ach-title">OCI</h3>
                        <p class="ach-desc">Olimpiada Chilena de Informática</p>
                        <ul class="ach-list">
                            <li>1er Lugar Nacional (2018)</li>
                            <li>2do Lugar Nacional (2017)</li>
                        </ul>
                    </div>
                    <div class="achievement-card">
                        <h3 class="ach-title">
                            CMAT <span class="ach-meta">2018</span>
                        </h3>
                        <p class="ach-desc">
                            Campeonato Escolar de Matemáticas
                        </p>
                        <p class="ach-note">1er Lugar Nacional Grupal</p>
                    </div>
                </div>
            </section>

            <!-- Skills -->
            <section class="cv-section">
                <h2 class="section-label">Habilidades</h2>
                <div class="tag-cloud">
                    {
                        [
                            "Python",
                            "C++",
                            "JavaScript",
                            "Vue",
                            "React",
                            "Node",
                            "Django",
                            "Rails",
                            "Astro",
                        ].map((s) => <span class="cv-tag">{s}</span>)
                    }
                </div>
            </section>

            <!-- Languages -->
            <section class="cv-section">
                <h2 class="section-label">Idiomas</h2>
                <div class="lang-list">
                    <div class="lang-item">
                        <span class="lang-name">Español</span>
                        <span class="lang-level">Nativo</span>
                    </div>
                    <div class="lang-item">
                        <span class="lang-name">Inglés</span>
                        <span class="lang-level">Avanzado</span>
                    </div>
                    <div class="lang-item">
                        <span class="lang-name">Esperanto</span>
                        <span class="lang-level">Básico</span>
                    </div>
                </div>
            </section>
        </main>

        <footer class="cv-footer">
            <a href="/" class="back-link">
                <svg
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    ><path d="m15 18-6-6 6-6"></path></svg
                >
                Volver al inicio
            </a>
        </footer>
    </div>
</Layout>

<style is:global>
    .cv-container {
        max-width: 900px;
        margin: 0 auto;
        padding: 5rem 0 5rem 0;
    }

    .cv-header {
        text-align: center;
        margin-bottom: 1.5rem;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .name {
        font-size: 5rem;
        font-weight: 700;
        letter-spacing: -0.05em;
        line-height: 1;
        margin-bottom: 1.5rem;
        color: #fff;
    }

    .title {
        font-size: 1.5rem;
        opacity: 0.5;
        letter-spacing: 0.1em;
        text-transform: uppercase;
        font-weight: 500;
        margin-bottom: 1rem;
    }

    .cv-links {
        display: flex;
        gap: 2rem;
    }

    .link-item {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        color: #fff;
        text-decoration: none;
        font-weight: 600;
        font-size: 0.9rem;
        opacity: 0.4;
        transition: all 0.3s ease;
        padding: 0.75rem 1.5rem;
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 12px;
    }

    .link-item:hover {
        opacity: 1;
        background: rgba(255, 255, 255, 0.08);
        transform: translateY(-2px);
    }

    .cv-section {
        display: flex;
        flex-direction: column;
        gap: 2.5rem;
        margin-bottom: 5rem;
    }

    .section-label {
        display: flex;
        align-items: center;
        gap: 2rem;
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.25em;
        font-weight: 800;
        color: rgba(255, 255, 255, 0.6);
    }

    .section-label::after {
        content: "";
        flex: 1;
        height: 1px;
        background: linear-gradient(
            to right,
            rgba(255, 255, 255, 0.15),
            transparent
        );
    }

    .about-text {
        font-size: 1.25rem;
        line-height: 1.7;
        color: rgba(255, 255, 255, 0.8);
        font-weight: 400;
    }

    .experience-list {
        display: flex;
        flex-direction: column;
        gap: 3.5rem;
    }

    .experience-item {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .exp-header {
        display: flex;
        justify-content: space-between;
        align-items: baseline;
        gap: 2rem;
    }

    .exp-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: #fff;
    }

    .exp-date {
        font-size: 0.75rem;
        font-weight: 700;
        color: rgba(255, 255, 255, 0.2);
        letter-spacing: 0.1em;
        flex-shrink: 0;
    }

    .exp-org {
        font-size: 1rem;
        color: rgba(255, 255, 255, 0.5);
        font-weight: 500;
    }

    .exp-list {
        margin-top: 1rem;
        list-style: none;
        padding: 0;
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .exp-list li {
        font-size: 0.95rem;
        color: rgba(255, 255, 255, 0.4);
        padding-left: 1.25rem;
        position: relative;
    }

    .exp-list li::before {
        content: "";
        position: absolute;
        left: 0;
        top: 0.6em;
        width: 4px;
        height: 4px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.2);
    }

    .achievements-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 2rem;
    }

    .achievement-card {
        padding: 1.75rem;
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid rgba(255, 255, 255, 0.04);
        border-radius: 20px;
    }

    .ach-title {
        font-size: 1.1rem;
        font-weight: 700;
        color: #fff;
        margin-bottom: 0.25rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .ach-meta {
        font-size: 0.7rem;
        color: rgba(255, 255, 255, 0.2);
        letter-spacing: 0.1em;
    }

    .ach-desc {
        font-size: 0.85rem;
        color: rgba(255, 255, 255, 0.4);
        margin-bottom: 1rem;
        font-weight: 500;
    }

    .ach-list {
        list-style: none;
        padding: 0;
        display: flex;
        flex-direction: column;
        gap: 0.4rem;
    }

    .ach-list li {
        font-size: 0.85rem;
        color: rgba(255, 255, 255, 0.6);
        padding-left: 1rem;
        position: relative;
    }

    .ach-list li::before {
        content: "•";
        position: absolute;
        left: 0;
        color: rgba(255, 255, 255, 0.2);
    }

    .ach-note {
        font-size: 0.9rem;
        color: rgba(255, 255, 255, 0.6);
    }

    .skills-lang-row {
        display: flex;
        gap: 4rem;
    }

    .cv-section.half {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    .tag-cloud {
        display: flex;
        flex-wrap: wrap;
        gap: 0.75rem;
    }

    .cv-tag {
        font-size: 0.8rem;
        font-weight: 600;
        color: rgba(255, 255, 255, 0.6);
        padding: 0.5rem 1rem;
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 8px;
    }

    .lang-list {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .lang-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-bottom: 0.75rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.03);
    }

    .lang-name {
        font-size: 1rem;
        font-weight: 600;
        color: #fff;
    }

    .lang-level {
        font-size: 0.7rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        font-weight: 700;
        color: rgba(255, 255, 255, 0.3);
    }

    .cv-footer {
        margin-top: 5rem;
        text-align: center;
    }

    .back-link {
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        text-decoration: none;
        color: rgba(255, 255, 255, 0.3);
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .back-link:hover {
        color: #fff;
        transform: translateX(-5px);
    }

    @media (max-width: 768px) {
        .cv-container {
            padding: 4rem 0;
        }
        .name {
            font-size: 3.5rem;
        }
        .cv-section {
            gap: 1.5rem;
            margin-bottom: 6rem;
        }
        .section-label {
            gap: 1rem;
        }
        .exp-header {
            flex-direction: column;
            gap: 0.25rem;
        }
    }
</style>
