---
import { getCollection, type CollectionEntry } from "astro:content";
import Layout from "../../layouts/Layout.astro";

export async function getStaticPaths() {
    const registries = await getCollection("registros");
    return registries.map((entry) => ({
        params: { slug: entry.slug },
        props: { entry },
    }));
}

interface Props {
    entry: CollectionEntry<"registros">;
}

const { entry } = Astro.props;
const { Content } = await entry.render();

const formatDate = (dateStr: string) => {
    const date = new Date(dateStr);
    return date.toLocaleDateString("es-ES", {
        year: "numeric",
        month: "long",
        day: "numeric",
    });
};

// Sort entries if they are dates
const sortedItems =
    entry.data.type === "dates"
        ? [...(entry.data.items || [])].sort(
              (a, b) => new Date(b).getTime() - new Date(a).getTime(),
          )
        : entry.data.items || [];
---

<Layout title={`${entry.data.title} | Registro`}>
    <article class="registry-detail">
        <header class="registry-header">
            <h1>{entry.data.title}</h1>
            <p class="description">{entry.data.description}</p>
        </header>

        <div class="registry-content">
            <div class="prose">
                <Content />
            </div>

            <div class="items-list">
                <h2 class="list-title">Entradas registradas</h2>
                <div class="entries-grid">
                    {
                        sortedItems.map((item) => (
                            <div class="entry-item">
                                <span class="entry-value">
                                    {entry.data.type === "dates"
                                        ? formatDate(item)
                                        : item}
                                </span>
                            </div>
                        ))
                    }
                </div>
            </div>
        </div>

        <nav class="registry-nav">
            <a href="/registro" class="back-link">
                <svg
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    ><path d="m15 18-6-6 6-6"></path></svg
                >
                Volver al registro
            </a>
        </nav>
    </article>
</Layout>

<style is:global>
    .registry-detail {
        max-width: 800px;
        margin: 0 auto;
        padding: 6rem 0;
    }

    .registry-header {
        text-align: center;
        margin-bottom: 5rem;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .registry-header h1 {
        font-size: 4rem;
        font-weight: 700;
        line-height: 1;
        margin-bottom: 1.5rem;
        color: #fff;
        letter-spacing: -0.04em;
    }

    .description {
        font-size: 1.25rem;
        line-height: 1.6;
        opacity: 0.5;
        max-width: 600px;
    }

    .registry-content {
        margin-top: 4rem;
    }

    .prose {
        line-height: 1.8;
        font-size: 1.15rem;
        color: rgba(255, 255, 255, 0.8);
        margin-bottom: 4rem;
    }

    .prose a {
        color: #fff;
        text-decoration: none;
        border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        transition: all 0.3s ease;
        padding-bottom: 2px;
    }

    .prose a:hover {
        border-bottom-color: #fff;
        opacity: 0.8;
    }

    .list-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: #fff;
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    }

    .entries-grid {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .entry-item {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        padding: 1.25rem 1.5rem;
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid rgba(255, 255, 255, 0.03);
        border-radius: 12px;
        transition: all 0.2s ease;
    }

    .entry-item:hover {
        background: rgba(255, 255, 255, 0.04);
        border-color: rgba(255, 255, 255, 0.08);
    }

    .entry-value {
        font-size: 1rem;
        font-weight: 500;
        color: rgba(255, 255, 255, 0.9);
    }

    .registry-nav {
        margin-top: 6rem;
    }

    .back-link {
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        text-decoration: none;
        color: rgba(255, 255, 255, 0.4);
        font-weight: 500;
        transition: all 0.2s ease;
    }

    .back-link:hover {
        color: #fff;
        transform: translateX(-5px);
    }

    @media (max-width: 768px) {
        .registry-header h1 {
            font-size: 3rem;
        }
    }
</style>
