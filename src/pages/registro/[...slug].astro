---
import { getCollection, type CollectionEntry } from "astro:content";
import Layout from "../../layouts/Layout.astro";

export async function getStaticPaths() {
    const registries = await getCollection("registros");
    return registries.map((entry) => ({
        params: { slug: entry.slug },
        props: { entry },
    }));
}

interface Props {
    entry: CollectionEntry<"registros">;
}

const { entry } = Astro.props;
const { Content } = await entry.render();

const formatDate = (dateStr: string) => {
    // Split YYYY-MM-DD and create date in local time to avoid TZ shifts
    const [year, month, day] = dateStr.split("-").map(Number);
    const date = new Date(year, month - 1, day);
    return date.toLocaleDateString("es-ES", {
        year: "numeric",
        month: "long",
        day: "numeric",
    });
};

// Sort entries if they are dates or have a date property
const sortedItems = [...(entry.data.items || [])].sort((a, b) => {
    const getVal = (item: any) => {
        if (typeof item === "string") return item;
        return item.date || "";
    };
    return new Date(getVal(b)).getTime() - new Date(getVal(a)).getTime();
});
---

<Layout title={`${entry.data.title} | Registro`}>
    <article class="registry-detail">
        <header class="registry-header">
            <h1>{entry.data.title}</h1>
            <p class="description">{entry.data.description}</p>
        </header>

        <div class="registry-content">
            <div class="prose">
                <Content />
            </div>

            <div class="items-list">
                <h2 class="list-title">Entradas registradas</h2>
                <div class="entries-grid">
                    {
                        sortedItems.map((item) => (
                            <div class="entry-item">
                                {typeof item === "string" ? (
                                    <span class="entry-value">
                                        {entry.data.type === "dates"
                                            ? formatDate(item)
                                            : item}
                                    </span>
                                ) : (
                                    <div class="entry-card-content">
                                        <div class="entry-main-info">
                                            <span class="entry-title">
                                                {item.title}
                                            </span>
                                            {item.author && (
                                                <span class="entry-author">
                                                    por {item.author}
                                                </span>
                                            )}
                                        </div>
                                        <div class="entry-meta-info">
                                            <span class="entry-date">
                                                {formatDate(item.date)}
                                            </span>
                                            {item.link && (
                                                <a
                                                    href={item.link}
                                                    class="entry-link"
                                                >
                                                    Ver rese√±a
                                                    <svg
                                                        width="12"
                                                        height="12"
                                                        viewBox="0 0 24 24"
                                                        fill="none"
                                                        stroke="currentColor"
                                                        stroke-width="2.5"
                                                        stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                    >
                                                        <path d="M7 7h10v10M7 17 17 7" />
                                                    </svg>
                                                </a>
                                            )}
                                        </div>
                                    </div>
                                )}
                            </div>
                        ))
                    }
                </div>
            </div>
        </div>

        <nav class="registry-nav">
            <a href="/registro" class="back-link">
                <svg
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    ><path d="m15 18-6-6 6-6"></path></svg
                >
                Volver al registro
            </a>
        </nav>
    </article>
</Layout>

